<!DOCTYPE html>
<html>
<head>
	<title><%= yield(:title) %> | AirBnB clone</title>

	<%= include_gon %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<div class="signed_in">
    <% if signed_in? -%>
    	Welcome. You are signed in as <%= current_user.name %>.
    	<%= link_to t(".profile"), user_path(current_user.id) %>
    	<%= link_to t(".update profile"), edit_user_path(current_user.id) %>
    	<%= link_to t(".create new listing"), new_listing_path %>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
    <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end -%>
    <div>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>

  <%= render 'layouts/footer' %>
</div>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>